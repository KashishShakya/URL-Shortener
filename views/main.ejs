<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
</head>
<body>
  <h1>URL Shortener</h1>
  <form method="POST" action="/shorten">
   <input type="text" placeholder="Enter URL" name="longUrl"/>
  <button type="submit">Submit</button>
  </form>
  <h2>Shortened URL</h2>
  <ul>
    <% 
      Object.entries(urls).forEach(([shortId, longUrl]) => { %>
      <li>
        <a href="/<%= shortId %>"><%= request.protocol + '://' + request.get('host') + '/' + shortId %></a>
        â†’ <%= longUrl %>
        </li>
        <%})
      %>
  </ul>
</body>
</html>